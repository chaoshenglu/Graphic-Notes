{
  "manifest_version": 3,
  "name": "天猫数据采集器",
  "version": "1.0.0",
  "description": "采集天猫商品详情页数据的Chrome扩展",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://*.tmall.com/*",
    "https://*.taobao.com/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "天猫数据采集器"
  },
  "content_scripts": [
    {
      "matches": ["https://*.tmall.com/*", "https://*.taobao.com/*"],
      "js": ["content/content.js"]
    }
  ],
  "background": {
    "service_worker": "background/background.js"
  }
}